<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.CashAdvisor.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">?attr/colour2</item>
        <item name="fontFamily">@font/gilroysemibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Buttons Styles -->

    <style name="Widget.CashAdvisor.Button.PointButton">
        <item name="android:textColor">@color/point_color_selector</item>
        <item name="android:background">@drawable/button_point</item>
    </style>

    <style name="FormatSelectButton">
        <item name="android:background">@drawable/button_export_type</item>
    </style>

    <style name="Widget.CashAdvisor.Button.DeleteButton">
        <item name="android:textColor">?attr/m2</item>
        <item name="android:background">@drawable/button_delete</item>
    </style>

    <style name="Widget.CashAdvisor.Button.GrayBlackButtonR10">
        <item name="android:textColor">@color/colour2_colour1_color_selector</item>
        <item name="android:background">@drawable/button_r_10</item>
    </style>

    <style name="Widget.CashAdvisor.Button.GrayBlackButtonR100">
        <item name="android:textColor">@color/colour2_colour1_color_selector</item>
        <item name="android:background">@drawable/button_r_100</item>
    </style>

    <style name="Widget.CashAdvisor.Button.WhiteBlackButtonR15">
        <item name="android:textColor">@color/colour2_colour1_color_selector</item>
        <item name="android:background">@drawable/button_r_15</item>
    </style>

    <style name="Widget.CashAdvisor.Button.WhiteBlackButtonR100">
        <item name="android:textColor">@color/colour2_colour1_color_selector</item>
        <item name="android:background">@drawable/button_r_100_2</item>
    </style>

    <style name="Widget.CashAdvisor.Button.GrayBlackLineButton">
        <item name="android:textColor">@color/bg2_colour2_color_selector</item>
        <item name="android:background">@drawable/button_line</item>
    </style>

    <style name="Widget.CashAdvisor.Button.GrayBlackLineButton_2">
        <item name="android:textColor">@color/subcolour1_colour2_color_selector</item>
        <item name="android:background">@drawable/button_line_2</item>
    </style>

    <style name="Widget.CashAdvisor.Button.WhiteBlackLineButton">
        <item name="android:textColor">@color/colour2</item>
        <item name="android:background">@drawable/button_line_3</item>
    </style>

    <style name="Widget.CashAdvisor.Button.SignupButton">
        <item name="android:textColor">?attr/whitecolour</item>
        <item name="fontFamily">@font/gilroysemibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/black_button_r_10_no_stroke</item>
        <item name="cornerRadius">@dimen/button_radius_10</item>
    </style>

    <style name="Widget.CashAdvisor.Button.SigninButton">
        <item name="android:textColor">@color/subcolour1_colour2_color_selector</item>
        <item name="fontFamily">@font/gilroysemibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_r10_black_stroke</item>
        <item name="cornerRadius">@dimen/button_radius_10</item>
    </style>

</resources>