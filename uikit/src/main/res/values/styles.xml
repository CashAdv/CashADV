    <!-- Basic Text styles -->
    <style name="Widget.CashAdvisor.Text.Header1">
        <item name="fontFamily">@font/gilroybold</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Widget.CashAdvisor.Text.Header2">
        <item name="fontFamily">@font/gilroybold</item>
