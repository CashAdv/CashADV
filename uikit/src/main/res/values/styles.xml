    <style name="Widget.CashAdvisor.Text.Header3">
        <item name="fontFamily">@font/gilroybold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.CashAdvisor.Text.Main_Text">
        <item name="fontFamily">@font/gilroysemibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.CashAdvisor.Text.Text_info">
        <item name="fontFamily">@font/gilroysemibold</item>
        <item name="android:textSize">14sp</item>
