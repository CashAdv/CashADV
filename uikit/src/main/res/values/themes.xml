<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.CashAdvisor" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="CustomStepActive">@style/Widget.CashAdvisor.Text.RegisterStepActive</item>
        <item name="CustomStepInactive">@style/Widget.CashAdvisor.Text.RegisterStepInactive</item>
        <item name="CustomStepCompleted">@style/Widget.CashAdvisor.Text.RegisterStepCompleted</item>
    </style>

    <style name="Theme.CashAdvisor" parent="Base.Theme.CashAdvisor">
        <item name="colour1">@color/colour1</item>
        <item name="bg1">@color/bg1</item>
        <item name="bg2">@color/bg2</item>
        <item name="subcolour1">@color/subcolour1</item>
        <item name="subcolour2">@color/subcolour2</item>
        <item name="colour2">@color/colour2</item>
        <item name="whitecolour">@color/white</item>

        <item name="m1">@color/m1</item>
        <item name="m2">@color/m2</item>
        <item name="m3">@color/m3</item>
        <item name="m4">@color/m4</item>
        <item name="m5">@color/m5</item>
        <item name="m6">@color/m6</item>
        <item name="m7">@color/m7</item>
        <item name="m8">@color/m8</item>
        <item name="m9">@color/m9</item>

        <item name="sm1">@color/sm1</item>
        <item name="sm2">@color/sm2</item>
        <item name="sm5">@color/sm5</item>
 35-custom_view_3
        <item name="sm4">@color/sm4</item>
        <item name="CustomViewDiagramThirdStyle">@style/CustomViewDiagramThirdStyle</item>
    </style>
    <style name="CustomViewDiagramThirdStyle">
        <item name="dt_colorProgress">?attr/sm4</item>
        <item name="dt_colorBackground">?attr/colour1</item>
        <item name="dt_radiusView">10dp</item>
        <item name="dt_textSizeProgress">11sp</item>
        <item name="dt_textColorProgress">?attr/whitecolour</item>
        <item name="dt_textFontProgress">@font/intersemibold</item>


        <item name="CustomViewDiagramFourthStyle">@style/CustomViewDiagramFourthStyle</item>
    </style>

    <style name="CustomViewDiagramFourthStyle">
        <item name="colorProgress">?attr/m7</item>
        <item name="colorBackground">?attr/bg2</item>
        <item name="radiusView">10dp</item>
        <item name="textSizeProgress">11sp</item>
        <item name="textColorProgress">?attr/whitecolour</item>
        <item name="textFontProgress">@font/intersemibold</item>

    </style>
</resources>