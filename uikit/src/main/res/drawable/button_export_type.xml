<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:elevation="4dp" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/bg1" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Active color -->
    <item android:elevation="0dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/bg1" />
            <corners android:radius="4dp" />
        </shape>
    </item> <!-- Default color -->

</selector>