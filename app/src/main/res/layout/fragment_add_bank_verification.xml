<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".banks.presentation.ui.AddBankVerificationFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bottom_navigation_height"
        android:text="Экран верификации входа в банк, какой-нибудь код"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_code_input_analytics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имитация ввода правильного кода (вход с аналитики)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_code_input_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имитация ввода правильного кода (вход из настроек)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_code_input_analytics" />

    <Button
        android:id="@+id/btn_code_input_tracker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имитация ввода правильного кода (вход из трекера)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_code_input_settings" />


</androidx.constraintlayout.widget.ConstraintLayout>