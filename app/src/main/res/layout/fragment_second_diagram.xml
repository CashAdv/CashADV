<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.cashadvisor.authorization.presentation.ui.diagrams.SecondDiagramFragment">

    <app.cashadvisor.customView.multipleCircleProgressBar.MultipleCircleProgressBars
        android:id="@+id/progressBar"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/buttonMinusOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="minus" />

        <Button
            android:id="@+id/buttonPlusOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="plus" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/buttonMinusTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="minus" />

        <Button
            android:id="@+id/buttonPlusTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="plus" />
    </LinearLayout>

</LinearLayout>